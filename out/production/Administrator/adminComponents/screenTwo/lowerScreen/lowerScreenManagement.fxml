<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="adminComponents.screenTwo.lowerScreen.LowerManagementController">
   <children>
      <HBox prefHeight="80.0">
         <children>
            <Label contentDisplay="CENTER" prefHeight="95.0" prefWidth="600.0" text="Setting up a new role:" textOverrun="CLIP" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="16.0" />
